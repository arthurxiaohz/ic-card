	<delete id="delTblMbPointRule" parameterClass="int">    
		delete from Tbl_Mb_Point_Rule where id = #id#   
	</delete>
    
	<selectExt id="listTblMbPointRule" resultMap="TblMbPointRule"/> 
  
	<selectExt id="countTblMbPointRule" resultClass="int"/> 

